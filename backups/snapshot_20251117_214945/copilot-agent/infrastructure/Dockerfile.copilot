FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    netcat-traditional \
    nmap \
    procps \
    net-tools \
    iproute2 \
    iputils-ping \
    dnsutils \
    && rm -rf /var/lib/apt/lists/*

# Create app user for security
RUN useradd -m -u 1000 copilot && \
    mkdir -p /app /app/logs /app/config && \
    chown -R copilot:copilot /app

# Set working directory
WORKDIR /app

# Copy requirements first for better caching
COPY --chown=copilot:copilot infrastructure/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY --chown=copilot:copilot core/ ./core/
COPY --chown=copilot:copilot config/ ./config/
COPY --chown=copilot:copilot branding/ ./branding/

# Copy configuration files
COPY --chown=copilot:copilot config/.env.copilot .env
COPY --chown=copilot:copilot config/allowlist.json ./config/
COPY --chown=copilot:copilot config/modes.json ./config/

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV COPILOT_CONFIG_DIR=/app/config
ENV COPILOT_LOGS_DIR=/app/logs

# Create entry point script
RUN echo '#!/bin/bash\n\
echo "=== CopilotPrivateAgent Container ==="\n\
echo "Framework: DibTauroS/Ordo-ab-Chao"\n\
echo "Owner: Dib Anouar"\n\
echo "License: LUP v1.0"\n\
echo "===================================="\n\
\n\
# Display splash banner if available\n\
if [ -f "/app/branding/splash.txt" ]; then\n\
    cat /app/branding/splash.txt\n\
fi\n\
\n\
# Check configuration\n\
python3 -c "from core.copilot_agent import CopilotPrivateAgent; agent = CopilotPrivateAgent(); print(\"Agent initialized successfully\")"\n\
\n\
# Start the application\n\
exec "$@"' > /app/entrypoint.sh && \
    chmod +x /app/entrypoint.sh

# Switch to non-root user
USER copilot

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python3 -c "from core.copilot_agent import CopilotPrivateAgent; agent = CopilotPrivateAgent(); print('OK')" || exit 1

# Expose port for web interface (if running web server)
EXPOSE 8787

# Set entrypoint
ENTRYPOINT ["/app/entrypoint.sh"]

# Default command
CMD ["python3", "-c", "from core.copilot_agent import CopilotPrivateAgent; import time; agent = CopilotPrivateAgent(); print('CopilotPrivateAgent running...'); time.sleep(86400)"]